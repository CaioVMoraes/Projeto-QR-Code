@model FeiraProfissões.Models.tb_avaliacao

@{
    ViewBag.Title = "Avaliacao";
}

    <img src="https://avaliacaodepessoas.com.br/wp-content/uploads/2016/07/avalia%C3%A7%C3%A3o.jpg.jpeg" style="width:120%; margin-left:-25px;" />
    <h2 style="text-align:center; color:black">O que Achou da Feira?</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <center>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="estrelas">
                <input type="radio" id="vazio" name="estrela" value="" checked />

                <label for="estrela_um"><i class="fa"></i></label>
                <input type="radio" id="estrela_um" name="estrela" value="1" />

                <label for="estrela_dois"><i class="fa"></i></label>
                <input type="radio" id="estrela_dois" name="estrela" value="2" />

                <label for="estrela_tres"><i class="fa"></i></label>
                <input type="radio" id="estrela_tres" name="estrela" value="3" />

                <label for="estrela_quatro"><i class="fa"></i></label>
                <input type="radio" id="estrela_quatro" name="estrela" value="4" />

                <label for="estrela_cinco"><i class="fa"></i></label>
                <input type="radio" id="estrela_cinco" name="estrela" value="5" />
            </div>
            @Html.ValidationMessageFor(model => model.qt_estrelas, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </center>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
